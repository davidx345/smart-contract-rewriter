# Smart Contract Rewriter Environment Configuration

# Backend Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_PORT=3000

# AI/LLM Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/solivolt
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=solivolt

# Web3 Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_infura_project_id
ETHEREUM_NETWORK=mainnet

# Security Configuration
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Application Configuration
APP_NAME=Smart Contract Rewriter
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=.sol,.txt

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_BURST=5

# Google Cloud Configuration (for deployment)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_SQL_INSTANCE=your_sql_instance_name

# Docker Configuration
COMPOSE_PROJECT_NAME=solivolt
DOCKERFILE_TARGET=production
