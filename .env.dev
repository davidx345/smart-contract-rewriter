# Development Environment Configuration
DATABASE_URL=postgresql://postgres:password123@localhost:5432/solivolt
GEMINI_API_KEY=your_dev_gemini_key_here
SECRET_KEY=dev_secret_key_change_in_production_123
DEBUG=true
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000"]

# Redis Configuration
REDIS_URL=redis://:redis_password_123@localhost:6379/0

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
ENABLE_METRICS=true

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_A_B_TESTING=true
ENABLE_CHAOS_TESTING=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=colored

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Webhook URLs for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
