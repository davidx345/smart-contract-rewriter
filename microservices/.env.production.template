# Production Environment Variables (AWS EC2 Compatible)
# These match the actual production deployment on AWS

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/smart_contract_db

# AI Service Configuration  
GEMINI_API_KEY=${GEMINI_API_KEY}  # Injected via GitHub Secrets

# Security Configuration
SECRET_KEY=${SECRET_KEY}  # Injected via GitHub Secrets
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="Smart Contract Rewriter"
VERSION="1.0.0"

# CORS Configuration (Production domains)
CORS_ORIGINS=["https://smart-contract-rewriter.vercel.app", "https://api.smartcontract.example.com"]

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Performance Configuration
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30
